<toast>
    <visual>
        <binding template="ToastText02">
            <text id="1">Scheduled shutdown activated!</text>
            <text id="2">You have a couple minutes for save game or cancel shutdown</text>
        </binding>
    </visual>
       <actions>
            <action
            content="Cancel shutdown"
            arguments="cancelShutdown"
            activationType="foreground"/>
        <action
            content="Close"
            arguments="close"
            activationType="foreground"/>
    </actions>
</toast>